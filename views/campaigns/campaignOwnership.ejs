<% var campaignNum = 0; %>
<% campaigns.forEach(function(campaign) { %>
	<% if(campaign.status == status){ %>  
		<% campaignNum++; %>
	    <%- include('campaign', {campaign: campaign}); %>
	    <div class="deleteButton">
	    	<form action="/campaign/delete/<%= campaign.campaign_id %>" method="delete">
                <input type="submit" value="Supprimer">
            </form>
	    </div>
    <% } %>
<% }); %>
<% console.log(campaignNum); %>
<% if(campaignNum == 0){ %>
	<div class="noResult"> No match for this status. </div>
<%	} %>